sudo docker run -itd --name giraph giraph:sdbd
sudo docker exec -d giraph bash startup
sudo docker exec -u hduser -e HADOOP_HOME=/usr/local/hadoop giraph bash hadoop namenode -format
sudo docker exec -d -u hduser giraph bash ssh -o StrictHostKeyChecking=no hduser@hdnode01
sudo docker exec -d -u hduser giraph bash /usr/local/hadoop/bin/start-dfs.sh
sudo docker exec -d -u hduser giraph bash /usr/local/hadoop/bin/start-mapred.sh
